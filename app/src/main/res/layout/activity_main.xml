<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/top_bar_bg"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:paddingHorizontal="20dp"
        android:elevation="4dp"
        android:gravity="center_vertical">

        <View
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/live_dot"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BusApp.lk"
            android:textColor="#1B5E20"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBusInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="12dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/busInfoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/card_gradient">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:id="@+id/tvBusNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bus #138"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:background="@drawable/bus_number_pill"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"/>

                    <TextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â— MOVING"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/ivClose"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:src="@android:drawable/ic_menu_close_clear_cancel"
                    android:padding="6dp"
                    android:background="?attr/selectableItemBackgroundBorderless"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvBusId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus ID: 001"
                android:textColor="#2E7D32"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginTop="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp"/>

            <!-- Distance to User Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/eta_card_bg"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvDistanceToUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.5 km away from you"
                    android:textColor="#1B5E20"
                    android:textSize="15sp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tvETA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â±ï¸ Near you in 5 mins"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="6dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp"/>

            <!-- Route Journey Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journey Route"
                android:textColor="#1B5E20"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp">

                <!-- Start Point -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŸ¢ Start"
                        android:textColor="#388E3C"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvStartPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pettah"
                        android:textColor="#1B5E20"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>

                <!-- Distance -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:textColor="#757575"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvRouteDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15.2 km"
                        android:textColor="#2E7D32"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <!-- End Point -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ”´ End"
                        android:textColor="#D32F2F"
                        android:textSize="12sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvEndPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mount Lavinia"
                        android:textColor="#1B5E20"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:gravity="end"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Progress Bar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="12dp"
                android:background="@drawable/progress_bg"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="45% Complete"
                    android:textColor="#1B5E20"
                    android:textSize="13sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginVertical="16dp"/>

            <!-- Current Info Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Speed"
                        android:textColor="#757575"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvSpeed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="35 km/h"
                        android:textColor="#1B5E20"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Location"
                        android:textColor="#757575"
                        android:textSize="12sp"/>

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Galle Road, Colombo"
                        android:textColor="#1B5E20"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginTop="4dp"
                        android:maxLines="2"
                        android:ellipsize="end"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ• Live tracking active"
                android:textColor="#388E3C"
                android:textSize="13sp"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
